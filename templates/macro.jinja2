{% macro insertBtns(btn_data_list) %}
    <div class="btns">
        {% for btn_data in btn_data_list %}
            <div id="{{ btn_data['id'] }}" class="{{ btn_data['className'] }}">{{ btn_data['value'] }}</div>
        {% endfor %}
    </div>
{% endmacro %}